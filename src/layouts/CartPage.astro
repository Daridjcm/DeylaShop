---
import NavbarCartPage from "../components/NavbarCartPage.astro";
---

<section id="CartPage" class="min-h-screen bg-gray-100">
  <!-- Navbar -->
  <NavbarCartPage
    hrefIndex="/src/pages/index.astro"
    hrefImg="/Deyla.svg"
    altImg="Deyla Logo"
  />

  <!-- Cart Content -->
  <div class="container mx-auto py-8">
    <h1 class="text-3xl font-semibold mb-6 text-center">Your Cart</h1>

    <!-- Cart Items -->
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <div class="p-4 border-b border-gray-200">
        <div class="grid grid-cols-6 gap-4 text-gray-600 font-semibold">
          <div class="col-span-3">Product</div>
          <div class="text-center">Price</div>
          <div class="text-center">Quantity</div>
          <div class="text-right">Total</div>
        </div>
      </div>

      <!-- Sample Product Item -->
      <div class="p-4 border-b border-gray-200 flex items-center">
        <div class="flex items-center col-span-3 space-x-4">
          <img
            src="/public/sample-product.jpg"
            alt="Sample Product"
            class="w-16 h-16 rounded-lg object-cover"
          />
          <span class="text-gray-700 font-medium">Sample Product Name</span>
        </div>
        <div class="text-center w-1/6">$10.00</div>
        <div class="text-center w-1/6">
          <input
            type="number"
            value="1"
            class="w-16 border border-gray-300 rounded-lg text-center"
          />
        </div>
        <div class="text-right w-1/6">$10.00</div>
        <div class="ml-4">
          <button
            class="text-red-500 hover:text-red-700 focus:outline-none"
            aria-label="Remove product"
          >
            &times;
          </button>
        </div>
      </div>

      <!-- End of Sample Product Item -->

      <div class="p-4 flex justify-between items-center bg-gray-50">
        <span class="text-lg font-semibold">Total: $10.00</span>
        <button class="px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700">
          Checkout
        </button>
      </div>
    </div>
  </div>
</section>
