---
interface Props {
	hrefImg: string;
	altImg: string;
}

const { hrefImg, altImg } = Astro.props;

---

<section id="Home">
    <div class="grid place-items-center mt-10 mb-3 hover:scale-[1.1] transition ease-in delay-100 duration-[0.40s] pb-5">
        <img class="w-6/12" src={hrefImg} alt={altImg}>
    </div>
    <div class="text-center text-slate-100">
        <h1 class="text-4xl font-bold pb-2">Hello, this is Shop Online</h1>
        <div class="grid place-items-center">
            <p class="text-slate-200 opacity-[0.6] lg:w-[800px] md:w-[600px] p-2 sm:w-full">Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorum tempore totam, fugiat necessitatibus quaerat recusandae sunt eveniet error doloribus praesentium suscipit nihil quas ad tempora rem libero sint distinctio sed.</p>
        </div>
    </div>
</section>